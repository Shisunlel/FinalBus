<CustomDrawerItem@MDNavigationDrawerItem>
    text_color: 0, 0, 0, 1
    icon_color: 0, 0, 0, 1
<CustomTextField>
    icon_left_color: 0, 0, 0, 1
    icon_left_color_normal: 0, 0, 0, 1
    icon_left_color_focus: 0, 0, 0, 1
<TableHeader@MDLabel>
    bold: True
    text_color: 0, 0, 0, 1
    halign: "left"
<CustomButton@MDRaisedButton>
    md_bg_color: 0, 0, 0, 1
<BusStatusField>
    orientation: "horizontal"
    spacing: 20
    size_hint_y: None
    height: textfield.height
    CustomTextField:
        id: textfield
        hint_text: "Status"
        disabled: True
    CustomButton:
        text: "Active"
        on_release:
            textfield.text = self.text
            root.text = self.text
    CustomButton:
        text: "Inactive"
        on_release:
            textfield.text = self.text
            root.text = self.text
<BusTypeField>
    orientation: "horizontal"
    spacing: 20
    size_hint_y: None
    height: textfield.height
    CustomTextField:
        id: textfield
        hint_text: "Bus Type"
        disabled: True
    CustomButton:
        text: "Express"
        on_release:
            textfield.text = self.text
            root.text = self.text
    CustomButton:
        text: "VIP"
        on_release:
            textfield.text = self.text
            root.text = self.text
<AdminWindow>
    id: main_win
    orientation: "vertical"
    MDNavigationLayout:
        MDNavigationDrawer:
            id: nav_drawer
            type: "standard"
            anchor: "left"
            MDNavigationDrawerMenu:
                spacing: 20
                MDNavigationDrawerHeader:
                    id: nav_drawer_header
                    title: "Settings"
                    title_color: 0, 0, 0, 1
                    text: "Account Name"
                    text_color: 0, 0, 0, 1
                MDNavigationDrawerLabel:
                    text: "Manage User"
                CustomDrawerItem:
                    icon: "account-plus"
                    text: "Add User"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_add_user()
                CustomDrawerItem:
                    icon: "account"
                    text: "Update User"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_update_user()
                CustomDrawerItem:
                    icon: "account-remove"
                    text: "Remove User"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_remove_user()
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
                MDNavigationDrawerLabel:
                    text: "Manage Trip"
                CustomDrawerItem:
                    icon: "ticket"
                    text: "Add Trip"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_add_trip()
                CustomDrawerItem:
                    icon: "ticket-confirmation"
                    text: "Update Trip"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_update_trip()
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
                MDNavigationDrawerLabel:
                    text: "Manage Bus"
                CustomDrawerItem:
                    icon: "bus"
                    text: "Show Bus"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_bus()
                CustomDrawerItem:
                    icon: "bus-multiple"
                    text: "Add Bus"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_add_bus()
                CustomDrawerItem:
                    icon: "bus-alert"
                    text: "Update Bus"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_update_bus()
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
                MDNavigationDrawerLabel:
                    text: "Transaction"
                CustomDrawerItem:
                    icon: "file-table-box-multiple"
                    text: "Transaction Detail"
                    on_release:
                        nav_drawer.set_state("close")
                        root.goto_transaction()
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
                MDNavigationDrawerLabel:
                    text: "Others"
                    bold: True
                CustomDrawerItem:
                    icon: "account"
                    text: "Edit Profile"
                    on_release:
                        root.goto_edit_profile()
                        nav_drawer.set_state("close")
                CustomDrawerItem:
                    icon: "decagram-outline"
                    text: "Change Password"
                    on_release:
                        root.goto_settings()
                        nav_drawer.set_state("close")
                CustomDrawerItem:
                    icon: "logout"
                    text: "Logout"
                    on_release:
                        root.show_logout_dialog()
                        nav_drawer.set_state("close")
                MDNavigationDrawerDivider:
                    color: 0, 0, 0, .5
        ScreenManager:
            id: scrn_mngr
            Screen:
                id: main_scrn
                name: "main_scrn"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        id: toolbar
                        title: "Admin Dashboard"
                        md_bg_color: 0, 0, 0, 1
                        left_action_items:
                            [ \
                            [ \
                            'menu', lambda x: \
                            nav_drawer.set_state("open") if nav_drawer.state == "close" \
                            else nav_drawer.set_state("close") \
                            ] \
                            ]
                    MDBottomNavigation:
                        first_widget: "manage_user"
                        selected_color_background: 0, 0, 0, 1
                        text_color_active: 0, 0, 0, 1
                        MDBottomNavigationItem:
                            id: manage_user
                            name: "manage_user"
                            text: "Manage Users"
                            icon: "account"
                            on_tab_release:
                                root.show_user_table()
                            MDBoxLayout:
                                orientation: "vertical"
                                padding: 20, 20
                                canvas.before:
                                    Color:
                                        rgba: 0, 0, 0, .25
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                MDBoxLayout:
                                    orientation: "vertical"
                                    padding: 20, 10
                                    spacing: 10
                                    canvas.before:
                                        RoundedRectangle:
                                            size: self.size
                                            pos: self.pos
                                            radius: [12, 12, 12 ,12]
                                    GridLayout:
                                        cols: 10
                                        size_hint_y: .1
                                        spacing: 10
                                        TableHeader:
                                            text: "ID"
                                        TableHeader:
                                            text: "Username"
                                        TableHeader:
                                            text: "Password"
                                        TableHeader:
                                            text: "First Name"
                                        TableHeader:
                                            text: "Last Name"
                                        TableHeader:
                                            text: "Date of Birth"
                                        TableHeader:
                                            text: "Email"
                                        TableHeader:
                                            text: "Phone"
                                        TableHeader:
                                            text: "Role"
                                        TableHeader:
                                            text: "Active"
                                    ScrollView:
                                        GridLayout:
                                            id: user_table_content
                                            cols: 10
                                            spacing: 10
                                            size_hint_y: None
                        MDBottomNavigationItem:
                            id: manage_ticket
                            name: "manage_trip"
                            text: "Manage Trip"
                            icon: "bus"
                            on_tab_release:
                                root.show_trip_table()
                            MDBoxLayout:
                                orientation: "vertical"
                                padding: 20, 20
                                spacing: 20
                                canvas.before:
                                    Color:
                                        rgba: 0, 0, 0, .25
                                    Rectangle:
                                        size: self.size
                                        pos: self.pos
                                MDBoxLayout:
                                    orientation: "vertical"
                                    padding: 20, 10
                                    spacing: 10
                                    canvas.before:
                                        RoundedRectangle:
                                            size: self.size
                                            pos: self.pos
                                            radius: [12, 12, 12 ,12]
                                    GridLayout:
                                        cols: 5
                                        size_hint_y: .1
                                        spacing: 10
                                        TableHeader:
                                            text: "ID"
                                        TableHeader:
                                            text: "Description"
                                        TableHeader:
                                            text: "Price"
                                        TableHeader:
                                            text: "Available Seat"
                                        TableHeader:
                                            text: "Departure Date"
                                    ScrollView:
                                        GridLayout:
                                            id: trip_table_content
                                            cols: 5
                                            size_hint_y: None
                                            spacing: 10
            Screen:
                id: scrn_edit_profile
                name: "scrn_edit_profile"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Edit Profile"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items: [['arrow-left-bold', lambda x: root.goto_main_screen()]]
                    MDBoxLayout:
                        id: edit_profile_opt
                        orientation: "vertical"
                        padding: main_win.size[0]/4, main_win.size[1]/4
                        spacing: 20
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, .25
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        CustomTextField:
                            id: first_name_fld
                            hint_text: "First Name"
                            focus: True
                            on_text_validate:
                                last_name_fld.focus = True
                        CustomTextField:
                            id: last_name_fld
                            hint_text: "Last Name"
                            on_text_validate:
                                phone_fld.focus = True
                        CustomTextField:
                            id: phone_fld
                            hint_text: "Phone Number"
                            on_text_validate:
                                email_fld.focus = True
                        CustomTextField:
                            id: email_fld
                            hint_text: "Email"
                            helper_text: "Invalid Email Address"
                            helper_text_mode: "on_error"
                            on_text: self.error = False
                        CustomTextField:
                            id: dob_fld
                            hint_text: "Date of Birth(DD/MM/YYYY)"
                            on_focus:
                                root.dob_date_picker()
                        CustomButton:
                            text: "Update"
                            padding: main_win.size[0]/3, 0
                            size_hint_x: 1
                            on_release:
                                root.update_info(first_name_fld.text, last_name_fld.text,
                                phone_fld.text, email_fld.text, dob_fld.text)
            Screen:
                id: scrn_settings
                name: "scrn_settings"
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Change Password"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items: [['arrow-left-bold', lambda x: root.goto_main_screen()]]
                    MDBoxLayout:
                        id: settings_opt
                        orientation: "vertical"
                        padding: main_win.size[0]/4, main_win.size[1]/4
                        spacing: 20
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, .25
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        CustomTextField:
                            id: old_pass
                            hint_text: "Old Password"
                            helper_text: "Incorrect Password"
                            helper_text_mode: "on_error"
                            icon_left: "key-variant"
                            password: True
                            on_text:
                                self.error = False
                            on_text_validate:
                                new_pass.focus = True
                        CustomTextField:
                            id: new_pass
                            hint_text: "New Password"
                            helper_text: "Invalid Password"
                            helper_text_mode: "on_error"
                            icon_left: "key-variant"
                            password: True
                            on_text:
                                self.error = False
                            on_text_validate:
                                confirm_pass.focus = True
                        CustomTextField:
                            id: confirm_pass
                            hint_text: "Confirm New Password"
                            helper_text: "Confirm password does not match"
                            helper_text_mode: "on_error"
                            icon_left: "key-variant"
                            password: True
                            on_text:
                                self.error = False
                            on_text_validate:
                                root.update_password(old_pass.text, new_pass.text, confirm_pass.text)
                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: 20
                            CustomButton:
                                text: "Update"
                                size_hint_x: .5
                                on_release:
                                    root.update_password(old_pass.text, new_pass.text, confirm_pass.text)
                            CustomButton:
                                text: "Show Passwords"
                                size_hint_x: .5
                                on_release:
                                    old_pass.password = False if old_pass.password == True else True
                                    new_pass.password = False if new_pass.password == True else True
                                    confirm_pass.password = False if confirm_pass.password == True else True
            Screen:
                id: scrn_add_user
                name: 'scrn_add_user'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Add User"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Add User"
                        font_style: "H2"
                        halign: "center"
            Screen:
                id: scrn_update_user
                name: 'scrn_update_user'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Update User"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Update User"
                        font_style: "H2"
                        halign: "center"
            Screen:
                id: scrn_remove_user
                name: 'scrn_remove_user'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Remove User"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Remove User"
                        font_style: "H2"
                        halign: "center"
            Screen:
                id: scrn_add_trip
                name: 'scrn_add_trip'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Add Trip"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Add Trip"
                        font_style: "H2"
                        halign: "center"
            Screen:
                id: scrn_update_trip
                name: 'scrn_update_trip'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Update Trip"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Update Trip"
                        font_style: "H2"
                        halign: "center"
            Screen:
                id: scrn_bus
                name: 'scrn_bus'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Bus Details"
                        md_bg_color: 0, 0, 0, 1
                        left_action_items:
                            [ \
                            ['menu', lambda x: nav_drawer.set_state("open") \
                            if nav_drawer.state == "close" \
                            else nav_drawer.set_state("close")] \
                            ]
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: 20, 20
                        canvas.before:
                            Color:
                                rgba: 0, 0, 0, .25
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        MDBoxLayout:
                            orientation: "vertical"
                            padding: 20, 10
                            canvas.before:
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [12, 12, 12, 12]
                            GridLayout:
                                cols: 7
                                spacing: 10
                                size_hint_y: .1
                                TableHeader:
                                    text: "ID"
                                TableHeader:
                                    text: "Name"
                                TableHeader:
                                    text: "Type"
                                TableHeader:
                                    text: "Desc"
                                TableHeader:
                                    text: "Seat"
                                TableHeader:
                                    text: "Price"
                                TableHeader:
                                    text: "Status"
                            ScrollView:
                                GridLayout:
                                    id: bus_table_content
                                    cols: 7
                                    size_hint_y: None
                                    spacing: 10
            Screen:
                id: scrn_add_bus
                name: 'scrn_add_bus'
                MDBoxLayout:
                    orientation: "vertical"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, .25
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDTopAppBar:
                        title: "Add New Bus"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_bus()] \
                            ]
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: main_win.size[0]/4, main_win.size[1]/3
                        spacing: 20
                        CustomTextField:
                            id: bus_name_fld
                            hint_text: "Bus Name"
                            helper_text: "Please Input Bus Name"
                            helper_text_mode: "on_error"
                            focus: True
                            on_text: self.error = False
                            on_text_validate: bus_price_fld.focus = True
                        CustomTextField:
                            id: bus_price_fld
                            input_filter: "float"
                            hint_text: "Price"
                            helper_text: "Please Input Price"
                            helper_text_mode: "on_error"
                            on_text: self.error = False
                        BusTypeField:
                            id: bus_type_fld
                        CustomButton:
                            text: "Add New Bus"
                            size_hint_x: 1
                            on_release:
                                root.add_bus(bus_name_fld.text, bus_price_fld.text, bus_type_fld.text)
            Screen:
                id: scrn_update_bus
                name: 'scrn_update_bus'
                MDBoxLayout:
                    orientation: "vertical"
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, .25
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDTopAppBar:
                        title: "Update Bus"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_bus()] \
                            ]
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: main_win.size[0]/4, main_win.size[1]/3
                        spacing: 20
                        CustomTextField:
                            id: bus_id_fld
                            input_filter: "int"
                            hint_text: "Bus ID"
                            helper_text: "Bus doesn't not exist"
                            helper_text_mode: "on_error"
                            on_text: self.error = False
                            on_text_validate:
                                update_price_fld.focus = True
                        CustomTextField:
                            id: update_price_fld
                            input_filter: "float"
                            hint_text: "New Price"
                            helper_text: "Please Input New Price"
                            helper_text_mode: "on_error"
                            on_text: self.error = False
                        BusStatusField:
                            id: bus_status_fld
                        CustomButton:
                            text: "Update Bus"
                            size_hint_x: 1
                            on_release:
                                root.update_bus(bus_id_fld.text, update_price_fld.text, bus_status_fld.text)
            Screen:
                id: scrn_transaction
                name: 'scrn_transaction'
                MDBoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Update Trip"
                        md_bg_color: 0, 0, 0, 1
                        right_action_items:
                            [ \
                            ['arrow-left-bold', lambda x: root.goto_main_screen()] \
                            ]
                    MDLabel:
                        text: "Transaction Screen"
                        font_style: "H2"
                        halign: "center"